    <body>
        <h1> Sign up to Chat </h1>
        <div id="signupdiv">
        <form id="su-form" action="/register" method="POST">
            <label>Enter Name: </label>
            <input name="name" id="name" type="text" required> <br/><br/>
            <label>Enter Username :</label>
            <input name="username" id="username" type="text" required> <br/><br/>
            <label>Enter Email :</label>
            <input name="email" id="email" type="text" required> <br/><br/>
            <label>Enter Password :</label>
            <input name="password" id="password" type="password" required> <br/><br/>
            <label>Confirm Password :</label>
            <input name="password2" id="password2" type="password" required> <br/><br/>
            <input type="submit" value="Sign Up">
        </form>
        </div>
        
